<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="bottom_text">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#5E5E5E</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_marginTop">4dp</item>
    </style>

    <style name="bottom_iv">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_width">23dp</item>
        <item name="android:layout_height">23dp</item>
    </style>

    <style name="text1">
        <item name="android:layout_marginTop">7dp</item>
        <item name="android:layout_marginLeft">12dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="text2">
        <item name="android:layout_marginTop">9dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#969696</item>
    </style>

    <style name="text3">
        <item name="android:textSize">12sp</item>
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>

    <style name="right_arrow">
        <item name="android:src">@drawable/right_arrow</item>
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentRight">true</item>

    </style>
</resources>
