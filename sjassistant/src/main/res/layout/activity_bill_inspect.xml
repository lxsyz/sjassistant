<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:id="@+id/root"
    android:background="@color/white"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/person_information_layout"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="12dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_person"
                android:src="@drawable/customer_de"
                android:layout_width="40dp"
                android:layout_height="40dp" />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginTop="0dp"
                android:text="Jimmy"
                android:id="@+id/name"
                style="@style/text1" />

            <TextView
                android:layout_below="@+id/name"
                android:layout_alignStart="@+id/name"
                android:layout_alignLeft="@+id/name"
                android:text="财务科"
                style="@style/text2" />

            <TextView
                android:textColor="@color/my_black"
                android:text="2016-3-25"
                style="@style/text3"
                />
        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/line"
        android:layout_marginRight="12dp"
        android:layout_marginLeft="12dp" />
    
    <LinearLayout

        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:padding="12dp"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <TextView
                android:textColor="@color/my_light_gray"
                android:textSize="13dp"
                android:id="@+id/bill_detail"
                android:text="单据详情"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginLeft="12dp"
                android:id="@+id/bill_value"
                android:textColor="@color/my_black"
                android:textSize="13dp"
                android:text="something"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout

            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:paddingLeft="12dp"
            android:paddingBottom="12dp">
            <TextView
                android:textColor="@color/my_light_gray"
                android:textSize="13dp"
                android:id="@+id/apply_reason"
                android:text="申请事由"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginLeft="12dp"
                android:id="@+id/apply_value"
                android:textColor="@color/my_black"
                android:textSize="13dp"
                android:text="something"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/line"
        android:layout_marginRight="12dp"
        android:layout_marginLeft="12dp" />

    <RelativeLayout
        android:padding="12dp"
        android:background="@drawable/layout_select"
        android:id="@+id/bill_detail_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textColor="@color/my_black"
            android:textSize="13sp"
            android:layout_centerVertical="true"
            android:text="单据详细信息"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_marginRight="10dp"
            android:id="@+id/right_arrow1"
            style="@style/right_arrow" />
    </RelativeLayout>
    <View
        android:background="@color/background"
        android:layout_width="match_parent"
        android:layout_height="14dp" />

    <ListView
        android:layout_weight="1"
        android:id="@+id/inspect_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </ListView>

    <View
        android:background="@color/line"
        android:layout_width="match_parent"
        android:layout_height="1dp" />

    <LinearLayout
        android:background="@color/white"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <RelativeLayout

            android:id="@+id/pass_layout"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <ImageView

                android:src="@drawable/inspect_pass"
                android:layout_toLeftOf="@+id/iv_pass"
                android:layout_centerVertical="true"
                android:layout_width="26dp"
                android:layout_height="26dp" />

            <TextView
                android:id="@+id/iv_pass"
                android:layout_marginLeft="12dp"
                android:text="确认"
                android:layout_centerInParent="true"

                android:textColor="@color/my_light_gray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <View
            android:layout_marginTop="10dp"
            android:background="@color/line"
            android:layout_width="0.5dp"
            android:layout_height="30dp" />
        <RelativeLayout
            android:id="@+id/cancel_layout"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <ImageView

                android:src="@drawable/inspect_quit"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/iv_cancel"
                android:layout_width="26dp"
                android:layout_height="26dp" />

            <TextView
                android:id="@+id/iv_cancel"
                android:layout_marginLeft="12dp"

                android:layout_centerInParent="true"
                android:text="取消"
                android:textColor="@color/my_light_gray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>