<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:background="@color/white"
        android:padding="12dp"
        android:layout_width="match_parent"
        android:layout_height="55dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:text="公司名称"
                style="@style/setting_text"
                />

            <EditText
                android:id="@+id/company_name"
                android:layout_alignParentRight="true"
                android:text=""
                android:hint="请输入公司名称"
                android:background="@drawable/border"
                android:singleLine="true"
                android:layout_marginRight="13dp"
                android:layout_marginEnd="13dp"
                android:textColor="@color/my_more_light_gray"
                android:textColorHint="@color/my_more_light_gray"
                android:textSize="15sp"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

    </LinearLayout>

    <View
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:background="@color/line"
        android:layout_width="match_parent"
        android:layout_height="0.8dp"/>

    <LinearLayout
        android:id="@+id/customer_type_layout"
        android:background="@color/white"
        android:padding="12dp"
        android:layout_width="match_parent"
        android:layout_height="55dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:text="客户类型"
                style="@style/setting_text"
                />

            <TextView
                android:id="@+id/customer_type_value"
                android:layout_marginRight="13dp"
                android:layout_marginEnd="13dp"
                android:textColor="@color/my_more_light_gray"
                android:textSize="15sp"
                android:layout_toLeftOf="@+id/right_arrow2"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/right_arrow2"
                style="@style/right_arrow"
                />
        </RelativeLayout>

    </LinearLayout>

    <View
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:background="@color/line"
        android:layout_width="match_parent"
        android:layout_height="0.8dp"/>

    <LinearLayout
        android:id="@+id/apartment_layout"
        android:background="@color/white"
        android:padding="12dp"
        android:layout_width="match_parent"
        android:layout_height="55dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:text="人员部门"
                style="@style/setting_text"
                />

            <TextView
                android:id="@+id/apartment_value"
                android:layout_marginRight="13dp"
                android:layout_marginEnd="13dp"
                android:textColor="@color/my_more_light_gray"
                android:textSize="15sp"
                android:layout_toLeftOf="@+id/right_arrow3"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/right_arrow3"
                style="@style/right_arrow"
                />
        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:background="@color/line"
        android:layout_width="match_parent"
        android:layout_height="0.8dp"/>

    <LinearLayout
        android:id="@+id/person_work_layout"
        android:background="@color/white"
        android:padding="12dp"
        android:layout_width="match_parent"
        android:layout_height="55dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:text="人员职位"
                style="@style/setting_text"
                />

            <TextView
                android:id="@+id/person_work_value"
                android:layout_marginRight="13dp"
                android:layout_marginEnd="13dp"
                android:textColor="@color/my_more_light_gray"
                android:textSize="15sp"
                android:layout_toLeftOf="@+id/right_arrow4"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/right_arrow4"
                style="@style/right_arrow"
                />
        </RelativeLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_marginTop="15dp"
        android:background="@color/white"
        android:padding="12dp"
        android:layout_width="match_parent"
        android:layout_height="55dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:text="联系人姓名"
                style="@style/setting_text"
                />
            <EditText
                android:id="@+id/name"
                android:layout_alignParentRight="true"
                android:text=""
                android:hint="请输入联系人姓名"
                android:background="@drawable/border"
                android:singleLine="true"
                android:layout_marginRight="13dp"
                android:layout_marginEnd="13dp"
                android:textColor="@color/my_more_light_gray"
                android:textColorHint="@color/my_more_light_gray"
                android:textSize="15sp"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:background="@color/line"
        android:layout_width="match_parent"
        android:layout_height="0.8dp"/>

    <LinearLayout
        android:background="@color/white"
        android:padding="12dp"
        android:layout_width="match_parent"
        android:layout_height="55dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:text="联系人电话"
                style="@style/setting_text"
                />
            <EditText
                android:id="@+id/phone"
                android:layout_alignParentRight="true"
                android:text=""
                android:hint="请输入联系人电话"
                android:background="@drawable/border"
                android:singleLine="true"
                android:layout_marginRight="13dp"
                android:layout_marginEnd="13dp"
                android:textColor="@color/my_more_light_gray"
                android:textColorHint="@color/my_more_light_gray"
                android:textSize="15sp"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </LinearLayout>




        <Button
            android:id="@+id/confirm"
            android:layout_marginTop="18dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:textColor="@color/white"
            android:text="确定"
            android:background="@drawable/yuanjiao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


</LinearLayout>