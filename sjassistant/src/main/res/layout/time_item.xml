<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff" >


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginTop="5dp"
                android:layout_marginLeft="32dp"
                android:id="@+id/guiji"
                android:src="@drawable/guiji"
                android:layout_width="36dp"
                android:layout_height="36dp" />

            <!--<View
                android:layout_marginLeft="50dp"
                android:id="@+id/shortline"
                android:layout_below="@+id/guiji"
                android:layout_width="1dp"
                android:layout_height="40dp"
                android:background="@color/line"/>-->

            <TextView
                android:layout_toRightOf="@+id/guiji"
                android:layout_marginLeft="30dp"
                android:layout_alignTop="@+id/guiji"
                android:id="@+id/text"
                android:text="审批轨迹"
                android:textColor="@color/my_black"
                android:layout_marginTop="8dp"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <View

            android:id="@+id/top_line"
            android:layout_width="1dp"
            android:layout_height="38dp"
            android:layout_marginLeft="50dp"
            android:background="@color/line" />


        <ImageView
            android:id="@+id/img_icon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_below="@+id/top_line"
            android:layout_marginLeft="40dp"
            android:src="@drawable/unfinished" />

        <View
            android:id="@+id/bottom_line"
            android:layout_width="1dp"
            android:layout_height="58dp"
            android:layout_below="@id/img_icon"
            android:layout_marginLeft="50dp"
            android:background="@color/line" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="12dp"
        android:background="@drawable/inspect_qipao_green"
        android:orientation="horizontal"
        android:layout_alignBottom="@+id/linearLayout"
        android:layout_marginBottom="12dp">

        <LinearLayout
            android:id="@+id/person_information_layout"

            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/iv_person"
                    android:src="@drawable/customer_de"
                    android:layout_width="40dp"
                    android:layout_height="40dp" />

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_marginTop="0dp"
                    android:text="Jimmy"
                    android:id="@+id/name"
                    android:singleLine="true"
                    style="@style/text1" />

                <TextView
                    android:layout_below="@+id/name"
                    android:layout_alignStart="@+id/name"
                    android:layout_alignLeft="@+id/name"
                    android:text="财务科"
                    android:singleLine="true"
                    style="@style/text2" />

                <TextView
                    android:textColor="@color/my_light_gray"
                    android:text="2016-3-25"

                    android:singleLine="true"
                    style="@style/text3"
                    />
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>