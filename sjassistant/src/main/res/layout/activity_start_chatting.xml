<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">

    <android.support.v7.widget.RecyclerView

        android:id="@+id/id_recyclerview"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:padding="20dp"
        android:divider="@null"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
    />

    <LinearLayout
        android:background="@color/background"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/open_layout"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                
                <ImageView
                    android:id="@+id/iv_open"
                    android:src="@drawable/open_unchecked"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15dp"
                    android:layout_width="38dp"
                    android:layout_height="38dp" />
                <TextView
                    android:text="免提"
                    android:layout_below="@+id/iv_open"
                    android:textColor="@color/my_light_gray"
                    android:layout_marginTop="12dp"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/novoice_layout"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/iv_novoice"
                    android:src="@drawable/novoice_unchecked"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15dp"
                    android:layout_width="38dp"
                    android:layout_height="38dp" />
                <TextView
                    android:text="静音"
                    android:layout_below="@+id/iv_novoice"
                    android:textColor="@color/my_light_gray"
                    android:layout_marginTop="12dp"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_centerInParent="true"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="35dp"
                android:background="#EB7374"

                android:layout_width="match_parent"
                android:layout_height="50dp">
                <ImageView
                    android:src="@drawable/offphone"
                    android:layout_centerInParent="true"
                    android:layout_width="23dp"
                    android:layout_height="23dp" />
            </RelativeLayout>


        </RelativeLayout>
    </LinearLayout>

</LinearLayout>