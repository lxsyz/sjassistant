<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">

    <LinearLayout
        android:background="@drawable/layout_select"
        android:id="@+id/changeEmail"
        android:padding="12dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="55dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:text="更换绑定邮箱"
                style="@style/setting_text"
                />

            <TextView
                android:text="9484"
                android:layout_marginRight="13dp"
                android:layout_marginEnd="13dp"
                android:textColor="@color/my_black"
                android:textSize="15sp"
                android:layout_toLeftOf="@+id/right_arrow1"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/right_arrow1"
                style="@style/right_arrow"
                />


        </RelativeLayout>


    </LinearLayout>

    <View
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:background="@color/line"
        android:layout_width="match_parent"
        android:layout_height="0.8dp"/>

    <LinearLayout
        android:background="@drawable/layout_select"
        android:id="@+id/changePwd"
        android:padding="12dp"
        android:layout_width="match_parent"
        android:layout_height="55dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:text="更换登录密码"
                style="@style/setting_text"
                />

            <TextView
                android:layout_marginRight="13dp"
                android:layout_marginEnd="13dp"
                android:textColor="@color/my_black"
                android:textSize="15sp"
                android:layout_toLeftOf="@+id/right_arrow2"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/right_arrow2"
                style="@style/right_arrow"
                />
        </RelativeLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="13dp"
        android:background="@color/background" />
    <LinearLayout
        android:background="@drawable/layout_select"
        android:id="@+id/prompt"
        android:padding="12dp"
        android:layout_width="match_parent"
        android:layout_height="55dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:text="新消息提醒"
                style="@style/setting_text"
                />

            <TextView
                android:layout_marginRight="13dp"
                android:layout_marginEnd="13dp"
                android:textColor="@color/my_black"
                android:textSize="15sp"
                android:layout_toLeftOf="@+id/right_arrow3"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/right_arrow3"
                style="@style/right_arrow"
                />
        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:background="@color/line"
        android:layout_width="match_parent"
        android:layout_height="0.8dp"/>

    <LinearLayout
        android:background="@drawable/layout_select"
        android:id="@+id/noDisturb"
        android:padding="12dp"
        android:layout_width="match_parent"
        android:layout_height="55dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:text="勿扰模式"
                style="@style/setting_text"
                />
            <ImageView
                style="@style/right_arrow"
                />
        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:background="@color/line"
        android:layout_width="match_parent"
        android:layout_height="0.8dp"/>

    <LinearLayout
        android:background="@drawable/layout_select"
        android:id="@+id/clearCache"
        android:padding="12dp"
        android:layout_width="match_parent"
        android:layout_height="55dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:text="清除缓存"
                style="@style/setting_text"
                />
            <ImageView
                style="@style/right_arrow"
                />
        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="13dp"
        android:background="@color/background" />

    <LinearLayout
        android:background="@drawable/layout_select"
        android:id="@+id/changeServer"
        android:padding="12dp"
        android:layout_width="match_parent"
        android:layout_height="55dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:text="修改配置服务器地址"
                style="@style/setting_text"
                />
            <ImageView
                style="@style/right_arrow"
                />
        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:background="@color/line"
        android:layout_width="match_parent"
        android:layout_height="0.8dp"/>

    <LinearLayout

        android:id="@+id/update"
        android:background="@drawable/layout_select"
        android:padding="12dp"
        android:layout_width="match_parent"
        android:layout_height="55dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:text="版本更新"
                style="@style/setting_text"
                />

            <TextView
                android:text="V1.01"
                android:layout_marginRight="13dp"
                android:layout_marginEnd="13dp"
                android:textColor="@color/my_black"
                android:textSize="15sp"
                android:layout_toLeftOf="@+id/right_arrow5"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/right_arrow5"
                style="@style/right_arrow"
                />
        </RelativeLayout>

    </LinearLayout>

    <RelativeLayout
        android:background="@color/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <Button
            android:id="@+id/quit"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:textColor="@color/white"
            android:layout_alignParentBottom="true"
            android:text="退出登录"
            android:background="@drawable/yuanjiao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </RelativeLayout>
</LinearLayout>
